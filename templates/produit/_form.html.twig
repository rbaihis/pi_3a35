{{ form_start(form ,{'attr':{'novalidate':'novalidate'}})}}

<div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <form>
            <div class="row mb-3">
                {{form_label(form.nom_produit,'Nom Produit : ',{'attr':{'class':'form-label'}})}}
                {{form_widget(form.nom_produit,{'attr':{'class':'form-control', 'placeholder': 'Enter your product name'}})}}
                {{form_errors(form.nom_produit)}}

            </div>
            <div class="row mb-3">
                {{form_label(form.categorie_produit,'Cat√©gorie : ',{'attr':{'class':'form-label'}})}}
                {{form_widget(form.categorie_produit,{'attr':{'class':'form-select'}})}}
                {{form_errors(form.categorie_produit)}}

            </div>
            <div class="row mb-3">
                {{form_label(form.description,'description : ',{'attr':{'class':'form-label'}})}}
                {{form_widget(form.description,{'attr':{'class':'form-control', 'placeholder': 'Enter your produit description'}})}}
                {{form_errors(form.description)}}
            </div>
            <div class="row mb-3">
                {{form_label(form.quantite_produit,'Quantite Produit : ',{'attr':{'class':'form-label'}})}}
                {{form_widget(form.quantite_produit,{'attr':{'class':'form-control', 'placeholder': 'Enter your product quantity enter  1 and 100'}})}}
                {{form_errors(form.quantite_produit)}}

            </div>
            <div class="row mb-3">
                {{form_label(form.prix,'Prix : ',{'attr': {'class': 'form-label'}})}}
                {{form_widget(form.prix,{'attr':{'class':'form-control', 'placeholder': 'Enter your price in dinars'}})}}
                {{form_errors(form.prix)}}
              </div>
            <div>
                {{form_label(form.image_produit,'Image : ',{'attr':{'class':'form-label'}})}}
                {{form_widget(form.image_produit,{'attr':{'class':'form-control' }})}}
                {{form_errors(form.image_produit)}}

            </div>
            <div>
                {{form_label(form.marque,'marque : ',{'attr':{'class':'form-label'}})}}
                {{form_widget(form.marque,{'attr':{'class':'form-control', 'placeholder': 'Enter your product brand'}})}}
                {{form_errors(form.marque)}}

            </div>


        </form>
    </div>
    <button class="btn btn-sm btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}