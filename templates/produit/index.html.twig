{% extends 'produitback.html.twig' %}

{% block title %}Equipements paramedicaux {% endblock %}

{% block body %}

    <h1>Equipements paramedicaux</h1>
<div class="container-fluid pt-12 px-12">
    <div class="row g-12">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-150 p-12">
                <h6 class="mb-8">Tables des produits</h6>
                <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom_produit</th>
            <th>Description</th>
            <th>Quantite_produit</th>
            <th>Prix</th>
            <th>Marque</th>
            <th>Categorie</th>
            <th>Images</th>
            <th>actions</th>
        </tr>

        </thead>
        <tbody>

        {% for produit in pagination %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nomProduit }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.quantiteProduit }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.marque }}</td>
                <td>{{ produit.categorieProduit }}</td>


                <td><img src="{{ asset('assets/uploads/' ~ produit.imageProduit) }}" width="120" height="120"></td>



                <td>  {{ include('produit/_delete_form.html.twig') }} </td>
                <td><a  href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-sm btn-primary" href="">EDIT </a></td>


            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
                </table>
                {{ knp_pagination_render(pagination, 'produit/custoom_pagination.html.twig') }}

            </div>
        </div>

        <h1><a  href="{{ path('app_produit_new') }}" class="btn btn-sm btn-primary" href="">Ajouter </a></h1>




{% endblock %}