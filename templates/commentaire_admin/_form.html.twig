<div class="container">
{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
<div class="form-group"
    {{ form_label(form.article,"Choisir l'article à commenter") }}
    {{ form_widget(form.article,{'attr':{'class':'form-control'}}) }}

</div>
<div class="form-group"
    {{ form_label(form.contenu,"contenu du commentaire") }}
    {{ form_widget(form.contenu,{'attr':{'class':'form-control'}}) }}
    {% if form_errors(form.contenu) is not empty %}
    <div class="alert alert-danger">
    {{ form_errors(form.contenu) }}
    </div>
    {% endif %}
</div>

<div class="form-group"
    {{ form_label(form.user,"l'utilisateur à commenter") }}
    {{ form_widget(form.user,{'attr':{'class':'form-control'}}) }}

</div>

    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
</div>