<div class="container">
{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
<div class="form-group"
    {{ form_label(form.sujet,"Sujet de l'article") }}
    {{ form_widget(form.sujet,{'attr':{'class':'form-control'}}) }}
    {% if form_errors(form.sujet) is not empty %}
    <div class="alert alert-danger">
    {{ form_errors(form.sujet) }}
    </div>
    {% endif %}
</div>
<div class="form-group"
    {{ form_label(form.contenu,"Contenu de l'article") }}
    {{ form_widget(form.contenu,{'attr':{'class':'form-control'}}) }}
    {% if form_errors(form.contenu) is not empty %}
    <div class="alert alert-danger">
    {{ form_errors(form.contenu) }}
    </div>
    {% endif %}
</div>
<div class="form-group"
    {{ form_label(form.image,"Image de l'article") }}
    {{ form_widget(form.image,{'attr':{'class':'form-control'}}) }}
    {% if form_errors(form.image) is not empty %}
    <div class="alert alert-danger">
    {{ form_errors(form.image) }}
    </div>
    {% endif %}
</div>
<div class="form-group"
    {{ form_label(form.user,"Auteur de l'article") }}
    {{ form_widget(form.user,{'attr':{'class':'form-control'}}) }}
    
</div>

    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
</div>