{% extends 'produit_front.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}

    <div class="container my-5">
        <div class="row">
            <div class="col-md-6">
                <img class="img-fluid mb-4" src="{{ asset('assets/uploads/' ~ produit.imageProduit) }}" alt="{{ produit.nomProduit }}">
            </div>
            <div class="col-md-6">
                <h1 class="fw-bold mb-4">{{ produit.nomProduit }}</h1>
                <h4 class="text-muted mb-4">{{ produit.description }}</h4>
                <div class="mb-4">
                    <span class="fw-bold">Quantité disponible:</span>
                    <span>{{ produit.quantiteProduit }}</span>
                </div>
                <div class="mb-4">
                    <span class="fw-bold">Prix:</span>
                    <span class="text-danger">{{ produit.prix ~ 'D' }}</span>
                </div>
                <a href="" class="btn btn-primary btn-lg me-3"><i class="far fa-envelope me-2"></i>Contact Us</a>
                <a href="{{ path('app_produitfront') }}" class="btn btn-outline-primary btn-lg">Retour à la liste</a>
            </div>
        </div>
    </div>

{% endblock %}
