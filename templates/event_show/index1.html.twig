{% extends 'base_front_event.html.twig' %}

{% block title %} Évènement {% endblock %}

{% block body %}

<div class="container-fluid pt-4 px-4">
                <div class="bg-light rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                           
                             <h1>Les Évenements </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_event</th>
                <th>Discription_event</th>
                <th>Image_event</th>
                <th>Date_debut_event</th>
                <th>Date_fin_event</th>
                <th>Adresse_event</th>
                <th>Status</th>
                <th>Reserve</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.nomEvent }}</td>
                <td>{{ event.discriptionEvent }}</td>
                <td><img src="{{ event.imageEvent }}"width="100" height="100"></td>
                <td>{{ event.dateDebutEvent ? event.dateDebutEvent|date('Y-m-d') : '' }}</td>
                <td>{{ event.dateFinEvent ? event.dateFinEvent|date('Y-m-d') : '' }}</td>
                <td>{{ event.adresseEvent }}</td>
                <td>{{ event.status }}</td>
                <td>{{ event.reserve }}</td>
                <td>
                    <a href="{{ path('app_events_ticket_new', {'id': event.id}) }}"class="btn btn-primary py-2 px-4 mt-4">Reserver</a>
                   

                   
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    


    
                   
                    
                    
                    
                </div>
