{%extends 'basefront.html.twig'%}

<!DOCTYPE html>

<title>Service</title>

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>NomService</th>
                <td>{{ service.NomService }}</td>
            </tr>
            <tr>
                <th>NomPropriétaire</th>
                <td>{{ service.NomPropriétaire }}</td>
            </tr>
            <tr>
                <th>Id_type</th>
                <td>{{ service.idType }}</td>
            </tr>
            <tr>
                <th>TypeService</th>
                <td>{{ service.TypeService }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ service.prix }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ service.DateDebut ? service.DateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ service.DateFin ? service.DateFin|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_service_index') }}">back to list</a>

    <a href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>

    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
