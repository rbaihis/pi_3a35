{% extends 'baseLogin.html.twig' %}
{% block title %}<title>Register</title>{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h3 class="text-primary"><i class="fa fa-hashtag me-2"> Register</i></h3>

    {{ form_start(registrationForm) }}
    <div class="form-floating mb-3 "> {{ form_row(registrationForm.email , {'attr': {'class': 'form-control'},'label': 'Email Address', 'placeholder': 'Enter your email address'}) }}</div>
        <div class="form-floating mb-3" >{{ form_row(registrationForm.plainPassword,{'attr': {'class': 'form-control' , 'label': 'Password', 'placeholder': 'Enter your password'}}, {
            label: 'Password'
        }) }}</div>



        {{ form_row(registrationForm.agreeTerms,{ 'attr':{ 'class':'form-check-input'} ,'label_attr':{'class':'form-check-label'} }) }}
    <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Register</button>

    {{ form_end(registrationForm) }}
{% endblock %}
